@model IEnumerable<MovieReviewsApp.Models.Review>

@{
    ViewData["Title"] = "Index";
}

<div class="container">
   <div class="row">
       <h2 class="col-12 text-center">
           Moive Reviews
       </h2>
       <a class="btn btn-secondary" asp-action="Create">Create Review</a>
   </div>
</div>
<div class="d-flex justify-content-center align-items-center flex-wrap">
    @foreach (var item in Model)
    {
        <div class="m-3 card">
            <div class="card-body">
                <h5 class="card-title">@Html.DisplayFor(modelItem => item.MovieName)</h5>
                <p class="card-text">@Html.DisplayFor(modelItem => item.Message)</p>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </div>
        </div>
    }
</div>
